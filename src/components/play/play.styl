.play-main
    display: grid
    grid-template-rows: 32px 33vh 1fr
    align-items: center
    .end-turn
        color: white
        display: grid
        text-align: center
        font-size: 20px
    .player_name
        display: grid
        align-items: center
        text-align: center
        font-size: 30px
        font-weight: 900
        color: rgba(255,255,255,.85)
        text-shadow: 0px 0px 8px rgba(0,0,0,.25)
        .description
            font-size: 20px
        .sub-description
            font-size: 15px
            
    .header
        display: grid
        grid-template-columns: 1fr 1fr 1fr 1fr
        background: white
        box-shadow: 1px 1px 2px rgba(0,0,0,.25)
        align-items: center
        justify-items: center
        height: 32px
        width: 100%

        .item
            display: grid
            grid-template-columns: auto 1fr
            align-items: center
    .background
        width: 100vw
        height: 100vh
        position: fixed
        top: 0
        left: 0
        z-index -100
    .moves
        display: grid
        grid-template-columns: 1fr 1fr 1fr
        justify-items: center

        .move
            img
                width: 15vw
        .key
            display: grid
            text-align: center
            align-items: center

            width: 32px
            height: 32px
            background: #DDD

            border: 3px solid#CCC
            