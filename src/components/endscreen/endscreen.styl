.endscreen-main
    display: grid
    grid-auto-rows: 30vh 10vh 60vh
    color: white
    width: 100%
    height: 100%
    justify-items: center

    .title
        display: grid
        grid-template-columns: auto auto auto
        align-items: center
        text-align: center
        justify-items: center
        font-size: 18px
        padding-left: 20px
        padding-right: 20px
        font-weight: 900
    
    .marker
        display: grid
        grid-template-columns: 1fr 1fr 1fr
        justify-content: space-around
        justify-items: center
        align-items: center
        font-size: 24px
        width: 75vw
    .footer
        display: grid
        align-items: center
        justify-items: center
        .buttons
            display: grid
            grid-template-rows: repeat(3, 50px)
            grid-row-gap: 5px
            button
                background: rgba(0,0,0,.5)
                border: none
                color: white
                font-size: 18px
                padding: 3px 0px
                width: 75vw
                border-radius: 5px
                box-shadow: 0px 0px 10px rgba(0,0,0,.5)

