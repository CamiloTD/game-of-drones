.leaderboards-main
    color: white
    width: 75vw
    margin-left: 12.5vw

    .search
        display: grid
        grid-template-columns: 1fr 48px
        height: 40px
        margin-top: 30px
        box-shadow: 0px 0px 20px transparentify(white, .8)
        
        input, button
            display: grid
            height: 40px
            align-items: center
            text-align: center
            color: white
        
        input
            height 38px
            border: none
            background: rgba(200,200,255,.25)
            font-size: 18px
        button
            border: none
            border-radius: 2px 4px 4px 2px
            background: rgba(100,100,135,.25)
            font-size: 16px
    .details
        display: grid
        grid-template-columns: 1fr
        justify-content: center
        margin-top: 40px

        .row
            display: grid
            align-items: center
            grid-template-columns: 20px 80px auto